<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7E5EDB"
    android:foregroundTint="#FFFFFF"
    android:visibility="visible"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="313dp"
        android:layout_height="678dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="573dp"
        app:cardBackgroundColor="#6E00FB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116">

        <TextView
            android:id="@+id/textView"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="143dp"
            android:layout_marginRight="143dp"
            android:text="REGISTER YOUR ACCOUNT"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="303dp"
            android:translationX="15"
            android:translationY="40"
            app:cardBackgroundColor="#7E5EDB">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:fontFamily="sans-serif-black"
                android:inputType="textPersonName"
                android:text="Name:"
                android:textColor="#7E5EDB"
                android:translationX="30"
                android:translationY="20" />

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:fontFamily="sans-serif-black"
                android:inputType="textPersonName"
                android:text="Email:"
                android:textColor="#7E5EDB"
                android:translationX="30"
                android:translationY="50" />

            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:fontFamily="sans-serif-black"
                android:inputType="textPersonName"
                android:text="Username:"
                android:textColor="#7E5EDB"
                android:translationX="30"
                android:translationY="80" />

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:fontFamily="sans-serif-black"
                android:inputType="textPersonName"
                android:text="Phone Number:"
                android:textColor="#7E5EDB"
                android:translationX="30"
                android:translationY="110" />

            <EditText
                android:id="@+id/editTextTextPersonName5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:fontFamily="sans-serif-black"
                android:inputType="textPersonName"
                android:text="Password:"
                android:textColor="#7E5EDB"
                android:translationX="30"
                android:translationY="140" />

            <EditText
                android:id="@+id/editTextTextPersonName6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:fontFamily="sans-serif-black"
                android:inputType="textPersonName"
                android:text="Confirm Password:"
                android:textColor="#7E5EDB"
                android:translationX="30"
                android:translationY="170" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:translationX="90"
                android:translationY="200" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>